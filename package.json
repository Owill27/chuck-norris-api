{
  "name": "chuck-norris-api",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "server:build": "turbo build --filter server",
    "server:start": "turbo start --filter server",
    "dev": "turbo dev",
    "server:dev": "turbo dev --filter server",
    "client:dev": "turbo dev --filter client",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,less}\""
  },
  "devDependencies": {
    "@norris/eslint-config": "*",
    "@norris/typescript-config": "*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
